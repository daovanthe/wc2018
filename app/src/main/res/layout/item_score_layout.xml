<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:id="@+id/info_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="2dp">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/header_live_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="World Cup 2018"
                        android:textColor="@android:color/background_light"
                        android:textSize="18sp"
                        app:fontFamily="@font/aclonica" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingTop="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/update_on_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="false"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:text="Update on:"
                        android:textColor="@android:color/background_light"
                        android:textSize="12sp"
                        app:fontFamily="@font/aldrich" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/date_update_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/update_on_txt"
                        android:layout_weight="1"
                        android:paddingLeft="4dp"
                        android:text="2018-06-15"
                        android:textColor="@android:color/background_light"
                        android:textSize="12sp"
                        app:fontFamily="@font/aldrich" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/status_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/date_update_txt"
                        android:gravity="right"
                        android:paddingLeft="4dp"
                        android:text="IN PLAY"
                        android:textColor="@android:color/background_light"
                        android:textSize="14sp"
                        app:fontFamily="@font/aldrich" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="12dp">

                    <ImageView
                        android:id="@+id/home_img"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        app:srcCompat="@drawable/russia" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/home_name_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="8dp"
                        android:text="Russia"
                        android:textColor="@android:color/background_light"
                        android:textSize="18sp"
                        app:fontFamily="@font/amiko_semibold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.35"
                    android:orientation="vertical"
                    android:paddingTop="8dp">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/all_time_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="4dp"
                        android:text="0-0"
                        android:textColor="@android:color/background_light"
                        android:textSize="24sp"
                        app:fontFamily="@font/aldrich" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/half_time_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/half_time_header"
                            android:textColor="@android:color/background_light"
                            android:textSize="10sp"
                            app:fontFamily="@font/allerta" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/half_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/half_time_header"

                            android:gravity="right|center"
                            android:text="0-0"
                            android:textColor="@android:color/background_light"
                            android:textSize="10sp"
                            app:fontFamily="@font/allerta" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/full_time_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/full_time_header"
                            android:textColor="@android:color/background_light"
                            android:textSize="10sp"
                            app:fontFamily="@font/allerta" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/full_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_toRightOf="@id/full_time_header"
                            android:gravity="right|center"
                            android:text="0-0"
                            android:textColor="@android:color/background_light"
                            android:textSize="10sp"
                            app:fontFamily="@font/allerta" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/ex_time_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/extra_time_header"
                            android:textColor="@android:color/background_light"
                            android:textSize="10sp"

                            app:fontFamily="@font/allerta" />


                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/ex_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_toRightOf="@id/ex_time_header"
                            android:gravity="right|center"
                            android:text="0-0"
                            android:textColor="@android:color/background_light"
                            android:textSize="10sp"
                            app:fontFamily="@font/allerta" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/time_match"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_toRightOf="@+id/time_match_header"
                            android:gravity="center_vertical|center"
                            android:text="0-0"
                            android:textColor="@android:color/background_light"
                            android:textSize="14sp"
                            app:fontFamily="@font/audiowide" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="12dp">

                    <ImageView
                        android:id="@+id/away_img"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        app:srcCompat="@drawable/brazil" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/away_name_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="8dp"
                        android:text="Brazil"
                        android:textColor="@android:color/background_light"
                        android:textSize="18sp"
                        app:fontFamily="@font/amiko_semibold" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/event_list_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_score"
            android:orientation="vertical"></RelativeLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>